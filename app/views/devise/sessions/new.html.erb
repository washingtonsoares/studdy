
<div class="container studdy-container-login">
  <div style="color:white; margin-right: 40px;">
    <img class="image-login" src="/assets/fb_ufu.png" alt="rss feed" />
    <h2>Studdy</h2>
  </div>
  <div class="login-form col-md-4" >
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|%>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Enter your email", id:"login-email", class:"form-control login-field" %>
        <label class="login-field-icon fui-user" for="login-name"></label>
      </div>

      <div class="form-group">
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password", id:"login-pass", class:"form-control login-field" %>
        <label class="login-field-icon fui-lock" for="login-pass"></label>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>
        <%= f.submit "Log In", class:"btn btn-primary btn-lg btn-block" %>

    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
