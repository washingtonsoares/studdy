
<div class="container studdy-container-login">
  <div style="color:white; margin-right: 40px;">
    <img class="image-login" src="/assets/fb_ufu.png" alt="rss feed" />
    <h2>Studdy</h2>
  </div>
  <div class="login-form col-md-4" >
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <label class="login-field-icon fui-user" for="login-name"></label>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Enter your email", id:"login-email", class:"form-control login-field" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password", id:"login-pass", class:"form-control login-field" %>
      <label class="login-field-icon fui-lock" for="login-pass"></label>
    </div>

    <div class="form-group">
      <label class="login-field-icon fui-lock" for="login-pass"></label>
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: " Confirm Password", id:"login-pass", class:"form-control login-field" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class:"btn btn-primary btn-lg btn-block"%>
    </div>
  <% end %> 
    <%= render "devise/shared/links" %>
  </div>
</div>


